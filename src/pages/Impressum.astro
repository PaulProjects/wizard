---
import Layout from "../layouts/Layout.astro";
import Details from "../components/impressum.astro";
---

<Layout title="Wizard - Impressum">
	<div>
		<div class="wrapper flex justify-center items-center w-full h-full">
			<div
				class="flex justify-center flex-wrap flex-col p-5 lg:w:1/3 lg:h-2/3"
			>
				<div
					id="title"
					class="prose prose-sm md:prose-base w-full flex-grow"
				>
					<h1 class="text-center text-6xl" id="title">WIZARD</h1>
				</div>
			</div>
		</div>
		<article class="w-60 mx-auto px-3">
			<Details />
		</article>
	</div>
</Layout>
<style>
	.impressum-title {
		text-align: center;
	}

	.text {
		font:
			1em "Roboto",
			sans-serif;
		text-align: center;
		margin: 0 auto;
		width: 50%;
	}
</style>

<script>
	document.getElementById("title").addEventListener("click", () => {
		window.location.href = "/";
	});
</script>
