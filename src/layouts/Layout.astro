---
import { SEO } from "astro-seo";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <meta name="theme-color" content="#19113c"/>
    <meta name="description" content="Track and visualize your Wizard game with ease using our online score counter and visualizer tool."/>
    
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5" />
    <meta name="msapplication-TileColor" content="#da532c" />
    <meta name="theme-color" content="#ffffff" />

    <link rel="sitemap" href="/sitemap-index.xml" />
    <title>{title}</title>
    <SEO
      title="Wizard Card Game Score Counter Tracker and Visualizer"
      description="Track and visualize your Wizard card game scores with ease using our online score counter and visualizer tool."
      openGraph={{
        basic: {
          title: "Wizard Card Game Score Counter Tracker and Visualizer",
          type: "website",
          image: "",
        },
      }}
    />
  </head>
  <body>
    <slot />
  </body>
  <style is:global>
    @font-face {
      font-family: "Inter-Regular";
      src: url("/font/Inter-Regular.woff2") format("woff2");
      font-weight: normal;
      font-display: swap;
    }
    @font-face {
      font-family: "Ostrich-Sans-Heavy";
      font-style: normal;
      font-weight: bold;
      src: url("/font/OstrichSans-Heavy.woff2") format("woff2");
      font-display: swap;
    }
    @media (min-width: 1024px) {
      .box {
        padding: 2rem 2rem 6rem;
        box-sizing: border-box;
        min-height: 45.6rem;
        width: 29rem;
        height: auto;
      }
    }
    :root {
      --accent: 136, 58, 234;
      --accent-light: 224, 204, 250;
      --accent-dark: 49, 10, 101;
      --accent-gradient: linear-gradient(
        45deg,
        rgb(var(--accent)),
        rgb(var(--accent-light)) 30%,
        white 60%
      );
    }
    h1 {
      font-family: "Ostrich-Sans-Heavy", sans-serif;
      font-size: large;
      font-weight: 500;
    }
    h2 {
      font-family: "Ostrich-Sans-Heavy", sans-serif;
      font-size: large;
      font-weight: 400;
    }
    p,
    span {
      font-family: "Inter-Regular", sans-serif;
      font-size: 1.2rem;
      font-weight: 400;
    }
    html {
      font-family: system-ui, sans-serif;
      background: #13151a;
      background-size: 224px;
    }
    * {
      margin: 0;
    }
    .hidden {
      display: none;
      visibility: hidden;
    }
  </style>
</html>
<script>
  import OpenReplay from '@openreplay/tracker';
  
  // Check for demo mode
  const urlParams = new URLSearchParams(window.location.search);
  const demomode = urlParams.has("demo");
  
  // Only initialize tracking if not in demo mode
  let tracker;
  if (!demomode) {
    tracker = new OpenReplay({
      projectKey: "wK6Af6wnN7o3nHIMRgGC",
      obscureTextNumbers: false,
      obscureTextEmails: false,
      obscureInputDates: false,
      obscureInputEmails: false,
      obscureInputNumbers: false,
    });
    tracker.start();
    tracker.setMetadata('dev', !import.meta.env.PROD ? 'true' : 'false');
    tracker.setMetadata('referrer', document.referrer);
    tracker.setMetadata('userAgent', navigator.userAgent);
  }
  
  document.addEventListener('astro:page-load', () => {
    if (tracker) {
      tracker.setMetadata('page', window.location.pathname);
    }
  });
</script>